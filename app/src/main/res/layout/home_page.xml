<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dash_color"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/nomeApp"
        android:textColor="#f8f8f2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/subTitulo"
        android:textColor="#f8f8f2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnInserir"
            android:layout_width="289dp"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="61dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_incluir"
            android:background="@drawable/button_color"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnInserir"
            android:layout_alignTop="@+id/btnInserir"
            android:layout_marginStart="105dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Nova Consulta"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnListar"
            android:layout_width="289dp"
            android:layout_height="102dp"
            android:layout_below="@+id/btnInserir"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="61dp"
            android:src="@drawable/ic_listar"
            android:scaleType="fitStart"
            android:background="@drawable/button_color"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnListar"
            android:layout_alignTop="@+id/btnListar"
            android:layout_marginStart="124dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Consultas"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnAlterar"
            android:layout_width="289dp"
            android:layout_height="102dp"
            android:layout_below="@+id/btnListar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="61dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_alterar"
            android:background="@drawable/button_color"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnAlterar"
            android:layout_alignTop="@+id/btnAlterar"
            android:layout_marginStart="124dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Modificar\nConsulta"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnSair"
            android:layout_width="289dp"
            android:layout_height="102dp"
            android:layout_below="@+id/btnAlterar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="61dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_sair"
            android:background="@drawable/button_color"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnSair"
            android:layout_alignTop="@+id/btnSair"
            android:layout_marginStart="105dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Sair da Conta"
            android:textAlignment="center"
            android:textSize="24sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>